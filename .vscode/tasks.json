{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "01 Scaffold landing",
      "type": "shell",
      "command": "node setup-landing-home.js",
      "problemMatcher": []
    },
    {
      "label": "02 Type check",
      "type": "shell",
      "command": "pnpm type-check",
      "problemMatcher": []
    },
    {
      "label": "03 Dev server",
      "type": "shell",
      "command": "pnpm dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*Starting.*",
            "endsPattern": ".*Ready in.*"
          }
        }
      ]
    }
  ]
}
